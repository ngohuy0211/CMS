<div class="clearfix"></div>
<script>
    // Tao doi tuong array
    var slide = new Array();
    slide[0] = "static/User/images/slide-1.jpg";
    slide[1] = "static/User/images/slide-2.jpg";
    slide[2] = "static/User/images/slide-3.jpg";
    // Tao bien n de luu vi tri phan tu anh
    var n = 0;
    function next()
    {
        n++;
        // tac dong vao the html co id=slide, thay doi gia tri cua thuoc tinh src
        document.getElementById("slide").setAttribute("src",slide[n]);
        // khi den phan tu cuoi cung thi reset n
        if(n == slide.length - 1)
        {
            n = 0;
        }
    }
    function prev()
    {
        if(n == 0)
        {
            n = slide.length;
        }
        n--;
        document.getElementById("slide").setAttribute("src",slide[n]);
    }
</script>
<div class="slider">
    <img src="static/User/images/slide-1.jpg" style="width: 100%; height: 100%;" id="slide">
    <div id="next" onclick="next()">Next</div>
    <div id="prev" onclick="prev()">Prev</div>
    <div class="box-text">
        <div>
            
        </div>
    </div>
</div>
