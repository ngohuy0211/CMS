<%-include ('../layouts/header.ejs')-%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Class Management
        </h1>
    </section>

<!-- Main content -->
<section class="content">
    <h1>Class</h1>
    <a href="/staff/Faculty/Subject/<%=data.subject%>/Class/Create" class="btn btn-primary">
       <i class="fa fa-plus"></i> Create New Class
    </a>
    <br />
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>Class ID</th>
                <th>Class Name</th>
                <th>Created_at</th>
                <th>Updated at</th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <%for(x in data.class){%>
                <td>
                    <%=data.class[x].Class_ID%>
                </td>
                <td>
                    <%=data.class[x].Class_name%>
                </td>
                <td>
                    <%=data.class[x].Create_at%>
                </td>
                <td>
                    <%=data.class[x].Update_at%>
                </td>
                <td>
                    <a href="/staff/Faculty/Subject/<%=data.subject%>/Class/<%=data.class[x]._id%>/Exercise" title="ViewExercise">
                        <i class="fa fa-eye"> View Exercise</i>
                    </a>
                    <a href="/staff/Faculty/Subject/<%=data.subject%>/Class/<%=data.class[x]._id%>/Detail" title="Detail">
                        <i class="fa fa-eye">Detail</i>
                    </a> &nbsp;
                    <a href="/staff/Faculty/Subject/<%=data.subject%>/Class/<%=data.class[x]._id%>/Update" title="Update">
                        <i class="fa fa-pencil">Update</i>
                    </a> &nbsp;
                    <a href="/staff/Faculty/Subject/<%=data.subject%>/Class/<%=data.class[x]._id%>/Delete" title="Delete" onclick="return confirm('Are you sure delete?')">
                        <i class="fa fa-trash">Delete</i>
                    </a>
                </td>
            </tr>
            <%}%>
        </table>
        <div class="panel-footer">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="/staff/Faculty/Subject/<%=data.subject%>/Class/?page=<%=data.pagePrev%>">&laquo;</a></li>
                    <%for(i=1; i<=data.totalPages; i++){%>
                    <li class="page-item"><a class="page-link" href="/staff/Faculty/Subject/<%=data.subject%>/Class/?page=<%=i%>"><%=i%></a></li>
                    <%}%>
                    <li class="page-item"><a class="page-link" href="/staff/Faculty/Subject/<%=data.subject%>/Class/?page=<%=data.pageNext%>">&raquo;</a></li>
                </ul>
            </nav>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                <a class="btn btn-secondary" href="/staff/Faculty/<%=data.faculty%>/Subject">Back</a>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%-include ('../layouts/footer.ejs')-%>